#!/usr/bin/perl

use strict;
use warnings;

use Carp;

use Test::Whitespaces { _only_load => 1 };

sub main {
    foreach my $argv (@ARGV) {
        if (-T $argv) {
            Test::Whitespaces::_fix_file($argv);
        } else {
            croak "Can't work with file '$argv'";
        }
    }
}

main();
